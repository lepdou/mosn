{
  "servers": [
    {
      "default_log_path": "stdout",
      "default_log_level": "DEBUG",
      "graceful_timeout": "0s",
      "processor": 1,
      "listeners": [
        {
          "name": "clientListener",
          "address": "127.0.0.1:2045",
          "bind_port": true,
          "network": "tcp",
          "filter_chains": [
            {
              "tls_context_set": [
                {}
              ],
              "filters": [
                {
                  "type": "proxy",
                  "config": {
                    "downstream_protocol": "Http1",
                    "extend_config": {
                      "sub_protocol": "dubbo"
                    },
                    "router_config_name": "client_router",
                    "upstream_protocol": "X"
                  }
                }
              ]
            }
          ],
          "stream_filters": [
            {
              "type": "transcoder",
              "config": {
                "type": "http2dubbo"
              }
            }
          ]
        },


        {
          "name": "clientListener",
          "address": "127.0.0.1:2045",
          "bind_port": true,
          "network": "tcp",
          "filter_chains": [
            {
              "tls_context_set": [
                {}
              ],
              "filters": [
                {
                  "type": "proxy",
                  "config": {
                    "downstream_protocol": "Http1",
                    "extend_config": {
                      "sub_protocol": "dubbo"
                    },
                    "router_config_name": "client_router",
                    "upstream_protocol": "X"
                  }
                }
              ]
            }
          ],
          "stream_filters": [
            {
              "type": "transcoder",
              "config": {
                "type": "http2dubbo"
              }
            }
          ]
        },

        {
          "name": "serviceListener",
          "address": "127.0.0.1:2046",
          "bind_port": true,
          "network": "tcp",
          "filter_chains": [
            {
              "tls_context_set": [
                {}
              ],
              "filters": [
                {
                  "type": "proxy",
                  "config": {
                    "downstream_protocol": "X",
                    "extend_config": {
                      "sub_protocol": "dubbo"
                    },
                    "router_config_name": "service_router",
                    "upstream_protocol": "Http1"
                  }
                }
              ]
            }
          ],
          "stream_filters": [
            {
              "type": "transcoder",
              "config": {
                "type": "dubbo2http"
              }
            }
          ]
        }
      ],
      "routers": [
        {
          "router_config_name": "client_router",
          "virtual_hosts": [
            {
              "name": "clientHost",
              "domains": [
                "*"
              ],
              "routers": [
                {
                  "match": {
                    "headers": [
                      {
                        "name": "service",
                        "value": ".*"
                      }
                    ]
                  },
                  "route": {
                    "cluster_name": "clientCluster",
                    "timeout": "10000s"
                  }
                }
              ]
            }
          ]
        },
        {
          "router_config_name": "service_router",
          "virtual_hosts": [
            {
              "name": "serviceHost",
              "domains": [
                "*"
              ],
              "routers": [
                {
                  "match": {
                    "headers": [
                      {
                        "name": "service",
                        "value": ".*"
                      }
                    ]
                  },
                  "route": {
                    "cluster_name": "serviceCluster",
                    "timeout": "10000s"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "cluster_manager": {
    "clusters": [
      {
        "name": "clientCluster",
        "type": "SIMPLE",
        "lb_type": "LB_RANDOM",
        "max_request_per_conn": 1024,
        "conn_buffer_limit_bytes": 32768,
        "hosts": [
          {
            "address": "127.0.0.1:2046"
          }
        ],
        "dns_resolvers": {}
      },
      {
        "name": "serviceCluster",
        "type": "SIMPLE",
        "lb_type": "LB_RANDOM",
        "max_request_per_conn": 1024,
        "conn_buffer_limit_bytes": 32768,
        "hosts": [
          {
            "address": "127.0.0.1:8081"
          }
        ],
        "dns_resolvers": {}
      }
    ]
  },
  "tracing": {
    "enable": true,
    "driver": "SOFATracer"
  }
}